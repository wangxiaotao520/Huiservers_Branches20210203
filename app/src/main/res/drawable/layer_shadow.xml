<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 第一层阴影：左偏移2dp，上偏移4dp -->
    <item
        android:left="1dp"
        android:top="3dp">
        <shape>
            <solid android:color="#03000000"/>
            <!--圆角-->
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <!-- 第二层前景：：底偏移4dp，右偏移2dp -->
    <item
        android:bottom="3dp"
        android:right="1dp">
        <shape>
            <solid android:color="@color/white"/>
            <!--圆角-->
            <corners android:radius="5dp"/>
        </shape>
    </item>
</layer-list>
