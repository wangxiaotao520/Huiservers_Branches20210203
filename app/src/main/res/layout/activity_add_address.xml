<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/titlebar_center"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ellipsize="end"
            android:textCursorDrawable="@drawable/color_cursor"
            android:hint="请填写收货人姓名"
            android:padding="@dimen/margin_20"
            android:singleLine="true"
            android:textColorHint="@color/text_color_hint"
            android:textSize="@dimen/t_14sp"
            android:textColor="@color/c_title"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:background="@color/windowbackground"/>
        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ellipsize="end"
            android:textCursorDrawable="@drawable/color_cursor"
            android:hint="请填写收货人手机号"
            android:padding="@dimen/margin_20"
            android:inputType="number"
            android:singleLine="true"
            android:textColorHint="@color/text_color_hint"
            android:textSize="@dimen/t_14sp"
            android:textColor="@color/c_title"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:background="@color/windowbackground"/>

        <LinearLayout
            android:id="@+id/ll_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edt_address"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginRight="15dp"
                android:textCursorDrawable="@drawable/color_cursor"
                android:hint="选择地址"
                android:padding="@dimen/margin_20"
                android:textColorHint="@color/text_color_hint"
                android:textSize="@dimen/t_14sp"
                android:textColor="@color/c_title"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="18dp"
                android:background="@drawable/jiantou_you" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:background="@color/windowbackground"/>
        <EditText
            android:id="@+id/edt_address_detail"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:background="@null"
            android:ellipsize="end"
            android:textCursorDrawable="@drawable/color_cursor"
            android:hint="详细地址：如街道门牌号、小区、楼栋号、单元"
            android:padding="@dimen/margin_20"
            android:gravity="top|left"
            android:textColorHint="@color/text_color_hint"
            android:textSize="@dimen/t_14sp"
            android:textColor="@color/c_title"/>
    </LinearLayout>

<TextView
    android:id="@+id/tv_delete_address"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:text="删除收货地址"
    android:paddingLeft="20dp"
    android:textColor="@color/red_ed"
    android:layout_marginTop="15dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:textSize="14sp"
    android:visibility="gone"
    />
</LinearLayout>