<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/titlebar_center"></include>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:background="@color/line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ellipsize="end"
            android:textCursorDrawable="@drawable/color_cursor"
            android:hint="请填写收货人姓名"
            android:padding="@dimen/margin_20"
            android:singleLine="true"
            android:textColorHint="@color/text_color_hint"
            android:textSize="@dimen/t_14sp"
            android:textColor="@color/c_title"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/view_background"/>
        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ellipsize="end"
            android:textCursorDrawable="@drawable/color_cursor"
            android:hint="请填写收货人手机号"
            android:padding="@dimen/margin_20"
            android:inputType="number"
            android:singleLine="true"
            android:textColorHint="@color/text_color_hint"
            android:textSize="@dimen/t_14sp"
            android:textColor="@color/c_title"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/view_background"/>

        <LinearLayout
            android:id="@+id/ll_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edt_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ellipsize="end"
                android:textCursorDrawable="@drawable/color_cursor"
                android:hint="选择地址"
                android:padding="@dimen/margin_20"
                android:singleLine="true"
                android:textColorHint="@color/text_color_hint"
                android:textSize="@dimen/t_14sp"
                android:textColor="@color/c_title"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="18dp"
                android:background="@drawable/jiantou_you" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/view_background"/>
        <EditText
            android:id="@+id/edt_address_detail"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:background="@null"
            android:ellipsize="end"
            android:textCursorDrawable="@drawable/color_cursor"
            android:hint="详细地址：如街道门牌号、小区、楼栋号、单元"
            android:padding="@dimen/margin_20"
            android:singleLine="true"
            android:gravity="top|left"
            android:textColorHint="@color/text_color_hint"
            android:textSize="@dimen/t_14sp"
            android:textColor="@color/c_title"/>
    </LinearLayout>


</LinearLayout>