<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowbackground"
    android:orientation="vertical">
    <include layout="@layout/titlebar_center" />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/windowbackground"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_title"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                fresco:placeholderImage="@color/windowbackground"
                fresco:roundAsCircle="false"
                fresco:roundedCornerRadius="5dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">
                <com.huacheng.huiservers.view.ShadowLayout
                    android:id="@+id/sl_message"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    fresco:sl_cornerRadius="5dp"
                    fresco:sl_dx="0dp"
                    fresco:sl_dy="2dp"
                    fresco:sl_shadowColor="#0D000000"
                    fresco:sl_shadowRadius="5dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="34dp"
                                android:layout_height="34dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/windowbackground" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="消息中心"
                                    android:textColor="@color/title_color"
                                    android:textSize="16sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="慧生活充电欢迎您"
                                    android:textColor="@color/gray_99"
                                    android:textSize="12sp" />

                            </LinearLayout>
                        </LinearLayout>

                    </FrameLayout>

                </com.huacheng.huiservers.view.ShadowLayout>

                <com.huacheng.huiservers.view.ShadowLayout
                    android:id="@+id/sl_charge_record"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    fresco:sl_cornerRadius="5dp"
                    fresco:sl_dx="0dp"
                    fresco:sl_dy="2dp"
                    fresco:sl_shadowColor="#0D000000"
                    fresco:sl_shadowRadius="5dp">>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"

                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="34dp"
                                android:layout_height="34dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/windowbackground" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="充电记录"
                                    android:textColor="@color/title_color"
                                    android:textSize="16sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="查看最近充电详情"
                                    android:textColor="@color/gray_99"
                                    android:textSize="12sp" />

                            </LinearLayout>
                        </LinearLayout>

                    </FrameLayout>

                </com.huacheng.huiservers.view.ShadowLayout>


            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_scan"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@color/blue"
            android:orientation="vertical">

            <ImageView
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:background="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="扫一扫"
                android:textColor="@color/white"
                android:textSize="20sp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_equip_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:hint="输入设备编号"
            android:textColor="@color/text_color"
            android:textColorHint="@color/gray_99"
            android:textSize="18sp"
            android:layout_marginBottom="100dp" />


    </LinearLayout>
</ScrollView>
</LinearLayout>