<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_neighbor_top"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <FrameLayout
            android:id="@+id/fl_left"
            android:layout_width="40dp"
            android:layout_height="46dp">
            <ImageView
                android:id="@+id/iv_left"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/arrow_left"/>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/ly_search"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/corner_20_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="@dimen/margin"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="2dp"
                android:background="@mipmap/ic_sousuo2x"/>

            <com.huacheng.huiservers.view.ClearEditText
                android:id="@+id/edt_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin"
                android:hint="请输入小区或地址"
                android:background="@null"
                android:gravity="start|center_vertical"
                android:singleLine="true"
                android:textColor="#555555"
                android:textColorHint="#bbbbbb"
                android:imeOptions="actionSearch"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="14sp"/>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_search_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="21dp"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            android:visibility="gone" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/rl_rent_sale"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
