                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="租金"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:textColor="@color/title_color" />

                <ImageView
                    android:id="@+id/iv_rent_sale"
                    android:layout_width="11dp"
                    android:layout_height="7dp"
                    android:background="@mipmap/ic_arrow_down_house"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_acreage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_acreage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="面积"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:textColor="@color/title_color" />

                <ImageView
                    android:id="@+id/iv_acreage"
                    android:layout_width="11dp"
                    android:layout_height="7dp"
                    android:layout_marginRight="5dp"
                    android:background="@mipmap/ic_arrow_down_house"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_house_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_house_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="房型"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:textColor="@color/title_color" />

                <ImageView
                    android:id="@+id/iv_house_type"
                    android:layout_width="11dp"
                    android:layout_height="7dp"
                    android:layout_marginRight="5dp"
                    android:background="@mipmap/ic_arrow_down_house"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_order_type"
            android:layout_width="45dp"
