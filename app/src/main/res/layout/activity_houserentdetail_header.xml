<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:zhy="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.huacheng.huiservers.view.widget.MyXBanner
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/banner_1"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:AutoPlayTime="3000"
            app:isShowIndicatorOnlyOne="false"
            app:isShowNumberIndicator="true"
            app:numberIndicatorBacgroud="@drawable/allshape_zgraytm_k_20"
            app:pageChangeDuration="800"
            app:pointNormal="@null"
            app:pointSelect="@null"
            app:pointTopBottomPadding="@dimen/margin_15"
            app:pointsContainerBackground="@color/transparent"
            app:pointsPosition="RIGHT"
            app:tipTextColor="@color/white"
            app:tipTextSize="13sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="迎宾合作住宅区-3室1厅1卫面积120平米 | 3/6层"
                android:textColor="@color/title_color"
                android:textSize="@dimen/t_18sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="55.2万"
                    android:textColor="@color/orange"
                    android:textSize="23dp"
                    android:textStyle="bold" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/tv_time_release"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019.12.13更新"
                    android:textColor="@color/title_third_color"
                    android:textSize="@dimen/t_13sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/flowlayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    zhy:max_select="-1">
                </com.zhy.view.flowlayout.TagFlowLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">



                        <TextView
                            android:id="@+id/tv_house_area"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:text="120㎡"
                            android:gravity="center_horizontal"
                            android:textColor="@color/title_color"
                            android:textSize="@dimen/t_14sp"/>



                </LinearLayout>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/text_color_hint"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">



                    <TextView
                        android:id="@+id/tv_house_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:text="3室1厅一卫一厨"
                        android:gravity="center_horizontal"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/t_14sp"/>


                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/text_color_hint"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_floor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:text="5/6层"
                        android:gravity="center_horizontal"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/t_14sp"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_fk_type_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="付款方式"
                                android:singleLine="true"
                                android:textColor="@color/title_third_color"
                                android:textSize="@dimen/t_14sp"/>

                            <TextView
                                android:id="@+id/tv_fk_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="可贷款"
                                android:singleLine="true"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/title_color"
                                android:textSize="@dimen/t_14sp"/>

                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="入住时间"
                                android:textColor="@color/title_third_color"
                                android:textSize="@dimen/t_14sp"/>

                            <TextView
                                android:id="@+id/tv_ruzhu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="随时入住"
                                android:singleLine="true"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/title_color"
                                android:textSize="@dimen/t_14sp"/>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ly_zq"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_zq_time_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="房屋租期"
                                android:singleLine="true"
                                android:textColor="@color/title_third_color"
                                android:textSize="@dimen/t_14sp"/>

                            <TextView
                                android:id="@+id/tv_zq_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="3~12个月"
                                android:layout_marginLeft="10dp"
                                android:singleLine="true"
                                android:textColor="@color/title_color"
                                android:textSize="@dimen/t_14sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="房屋电梯"
                                android:textColor="@color/title_third_color"
                                android:textSize="@dimen/t_14sp"/>

                            <TextView
                                android:id="@+id/tv_elevator"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="无"
                                android:singleLine="true"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/title_color"
                                android:textSize="@dimen/t_14sp"/>

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rl_tips"
                android:layout_width="match_parent"
                android:background="@drawable/allshape_light_orange2"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="40dp">
                <LinearLayout
                    android:id="@+id/ly_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"

                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@mipmap/ic_rent_sale_tips"
                        android:layout_gravity="center_vertical"
                        />

                    <TextView
                        android:id="@+id/tv_type1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="租房小贴士"
                        android:textColor="@color/orange"
                        android:layout_marginLeft="5dp"
                        android:textSize="@dimen/t_14sp"
                        />

                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/windowbackground"/>

           
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="位置及周边配套"
                    android:textColor="@color/title_color"
                    android:layout_marginTop="15dp"
                    android:textSize="@dimen/t_18sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textStyle="bold"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/white">

                        <WebView
                            android:id="@+id/webview"
                            android:layerType="software"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/title_sub_color"
                            android:textSize="@dimen/t_15sp"
                            android:visibility="gone"/>
                       <TextView
                           android:id="@+id/tv_content"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text=""
                           android:textSize="@dimen/t_15sp"/>
                    </LinearLayout>

                </LinearLayout>

                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="@dimen/margin"-->
                    <!--android:orientation="horizontal"-->
                    <!--android:visibility="gone">-->

                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="周边介绍："-->
                        <!--android:textColor="@color/title_sub_color"-->
                        <!--android:textSize="@dimen/t_15sp"-->
                        <!--android:textStyle="bold"-->
                        <!--/>-->

                    <!--<TextView-->
                        <!--android:id="@+id/tv_around_introduce"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="阿达河山大好收到就好傻傻的可还是哈拉海大开杀戒等哈说会计活动卡技术很大数按时计活动卡技术很大数按时计活动卡技术很大数按时。"-->
                        <!--android:textColor="@color/title_sub_color"-->
                        <!--android:textSize="@dimen/t_15sp"-->

                        <!--/>-->

                <!--</LinearLayout>-->
            </LinearLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:background="@color/windowbackground"/>

            <LinearLayout
                android:id="@+id/ly_tj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐房屋"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/t_18sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <HorizontalScrollView
                android:id="@+id/hsv_recommand_container"
                android:layout_width="match_parent"
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:scrollbars="none"
                android:layout_height="206dp">
                <LinearLayout
                    android:id="@+id/ll_recommond_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">



                </LinearLayout>
            </HorizontalScrollView>
            <View
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@color/windowbackground" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>