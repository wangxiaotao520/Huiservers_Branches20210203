<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:zhy="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.huacheng.huiservers.view.widget.MyXBanner
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/banner_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:AutoPlayTime="3000"
            app:isShowIndicatorOnlyOne="false"
            app:isShowNumberIndicator="true"
            app:numberIndicatorBacgroud="@drawable/allshape_zgraytm_k_20"
            app:pageChangeDuration="800"
            app:pointNormal="@null"
            app:pointSelect="@null"
            app:pointTopBottomPadding="@dimen/margin_15"
            app:pointsContainerBackground="@color/transparents"
            app:pointsPosition="RIGHT"
            app:tipTextColor="@color/text_color"
            app:tipTextSize="13sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_15"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="迎宾合作住宅区-3室1厅1卫面积120平米 | 3/6层"
                android:textColor="@color/text_color"
                android:textSize="@dimen/t_18sp"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_rz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:background="@drawable/allshape_zorange_5"
                    android:gravity="center"
                    android:paddingBottom="@dimen/margin_2"
                    android:paddingLeft="@dimen/margin_8"
                    android:paddingRight="@dimen/margin_8"
                    android:paddingTop="@dimen/margin_2"
                    android:text="物业认证"
                    android:textColor="@color/white"
                    android:textSize="@dimen/t_13sp"/>

                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/flowlayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin"
                    zhy:max_select="-1">
                </com.zhy.view.flowlayout.TagFlowLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_house_type_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="房租（月付价）"
                        android:maxEms="10"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="@color/gray_9c"
                        android:textSize="@dimen/t_15sp"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_house_price1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin"
                            tools:text="200万元"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/t_15sp"/>

                        <TextView
                            android:id="@+id/tv_house_price2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin"
                            tools:text="/10300元"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/t_13sp"/>
                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="63dp"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:background="@color/graynew3"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="户型"
                        android:textColor="@color/gray_9c"
                        android:textSize="@dimen/t_15sp"/>

                    <TextView
                        android:id="@+id/tv_house_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin"
                        tools:text="3室1厅一卫一厨"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/t_15sp"/>


                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="63dp"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:background="@color/graynew3"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="面积"
                        android:textColor="@color/gray_9c"
                        android:textSize="@dimen/t_15sp"/>

                    <TextView
                        android:id="@+id/tv_house_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin"
                        tools:text="120平米"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/t_15sp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_tips"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_marginTop="@dimen/margin_15"
                android:background="@drawable/ic_houserent_tips"
                android:orientation="vertical"
                android:padding="@dimen/margin_13">

                <TextView
                    android:id="@+id/tv_type1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="租房小贴士"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/t_18sp"
                    android:textStyle="bold"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_type2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        tools:text="定金、签约和月付注意事项"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/t_15sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="74dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/allshape_zorange_k_20"
                        android:gravity="center"
                        android:text="查看详情"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/t_15sp"
                        />

                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_20"
                android:background="@color/graynew3"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="基本信息"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/t_20sp"
                    android:textStyle="bold"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="付款："
                                android:textColor="@color/gray_9c"
                                android:textSize="@dimen/t_18sp"/>

                            <TextView
                                android:id="@+id/tv_fk_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="可贷款"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/t_18sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="楼层："
                                android:textColor="@color/gray_9c"
                                android:textSize="@dimen/t_18sp"/>

                            <TextView
                                android:id="@+id/tv_floor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="5/9层"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/t_18sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="入住："
                                android:textColor="@color/gray_9c"
                                android:textSize="@dimen/t_18sp"/>

                            <TextView
                                android:id="@+id/tv_ruzhu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="随时入住"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/t_18sp"/>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ly_zq"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="租期："
                                android:textColor="@color/gray_9c"
                                android:textSize="@dimen/t_18sp"/>

                            <TextView
                                android:id="@+id/tv_zq_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="3~12个月"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/t_18sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="电梯："
                                android:textColor="@color/gray_9c"
                                android:textSize="@dimen/t_18sp"/>

                            <TextView
                                android:id="@+id/tv_elevator"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="无"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/t_18sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="发布时间："
                                android:textColor="@color/gray_9c"
                                android:textSize="@dimen/t_18sp"/>

                            <TextView
                                android:id="@+id/tv_release_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="2018.11.11"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/t_18sp"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_20"
                android:background="@color/graynew3"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小区和周边"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/t_20sp"
                    android:textStyle="bold"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="小区介绍："
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/t_15sp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <WebView
                            android:id="@+id/webview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/t_15sp"

                            />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="周边介绍："
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/t_15sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/tv_around_introduce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="阿达河山大好收到就好傻傻的可还是哈拉海大开杀戒等哈说会计活动卡技术很大数按时计活动卡技术很大数按时计活动卡技术很大数按时。"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/t_15sp"

                        />

                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_20"
                android:background="@color/graynew3"/>

            <LinearLayout
                android:id="@+id/ly_tj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐房屋"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/t_20sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>