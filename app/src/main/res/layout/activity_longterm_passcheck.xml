<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/titlebar_center"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/margin_15"
                android:paddingRight="@dimen/margin_15"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ly_select_house"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="*"
                        android:textColor="@color/red_ed"
                        android:textSize="@dimen/t_15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:text="选择房屋"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/t_15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical|right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_house"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginRight="@dimen/margin"
                            android:hint="请选择房屋"
                            android:text=""
                            android:textColor="@color/text_color"
                            android:singleLine="true"
                            android:gravity="right"
                            android:textColorHint="@color/gray4"
                            android:textSize="@dimen/t_15sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/ic_arrow_right_grey" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/windowbackground" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_45"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="*"
                        android:textColor="@color/red_ed"
                        android:textSize="@dimen/t_15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:text="人员姓名"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/t_15sp" />

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="right|center_vertical"
                        android:hint="请输入姓名"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/gray4"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="@dimen/t_15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/windowbackground" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_45"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="*"
                        android:textColor="@color/red_ed"
                        android:textSize="@dimen/t_15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:text="身份证号"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/t_15sp" />

                    <EditText
                        android:id="@+id/et_shenfen_num"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="right|center_vertical"
                        android:hint="请输入身份证号"
                        android:maxLength="18"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/gray4"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="@dimen/t_15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/windowbackground" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_45"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="*"
                        android:textColor="@color/red_ed"
                        android:textSize="@dimen/t_15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:text="联系电话"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/t_15sp" />

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="right|center_vertical"
                        android:hint="请输入电话"
                        android:maxLength="11"
                        android:numeric="integer"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/gray4"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="@dimen/t_15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/windowbackground" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_45"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:text="车牌号"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/t_15sp" />

                    <EditText
                        android:id="@+id/et_car_num"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="right|center_vertical"
                        android:hint="请输入车牌号"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/gray4"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="@dimen/t_15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/windowbackground" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_45"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="*"
                        android:textColor="@color/red_ed"
                        android:textSize="@dimen/t_15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:text="到达地址"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/t_15sp" />

                    <EditText
                        android:id="@+id/et_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="right|center_vertical"
                        android:hint="请输入到达地址"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/gray4"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="@dimen/t_15sp" />
                </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>