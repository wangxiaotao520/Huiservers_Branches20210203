<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowbackground"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ly_all"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginRight="@dimen/margin_15"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/allshape_white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center"
                android:text="电子通行证"
                android:textColor="@color/orange"
                android:textSize="@dimen/t_16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_15"
                android:background="@color/windowbackground" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <ImageView
                    android:id="@+id/iv_code"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/tv_shixiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="二维码已失效"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/t_16sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginBottom="@dimen/margin"
            android:background="@drawable/allshape_white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_15"
            android:paddingRight="@dimen/margin_15"
            android:paddingBottom="@dimen/margin_15">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:text="基本信息"
                android:textColor="@color/grey"
                android:textSize="@dimen/t_16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="所属房屋："
                        android:textColor="@color/gray_99"
                        android:textSize="@dimen/t_14sp" />

                    <TextView
                        android:id="@+id/tv_fangwu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/blackgray"
                        android:textSize="@dimen/t_14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="持证人："
                        android:textColor="@color/gray_99"
                        android:textSize="@dimen/t_14sp" />

                    <TextView
                        android:id="@+id/tv_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/blackgray"
                        android:textSize="@dimen/t_14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_yezhu_ID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="身份证号："
                        android:textColor="@color/gray_99"
                        android:textSize="@dimen/t_14sp" />

                    <TextView
                        android:id="@+id/tv_shenfenzheng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/blackgray"
                        android:textSize="@dimen/t_14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="联系电话："
                        android:textColor="@color/gray_99"
                        android:textSize="@dimen/t_14sp" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/blackgray"
                        android:textSize="@dimen/t_14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="车牌号："
                        android:textColor="@color/gray_99"
                        android:textSize="@dimen/t_14sp" />

                    <TextView
                        android:id="@+id/tv_car_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/blackgray"
                        android:textSize="@dimen/t_14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_fangke_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="来访事由："
                        android:textColor="@color/gray_99"
                        android:textSize="@dimen/t_14sp" />

                    <TextView
                        android:id="@+id/tv_fangke_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/blackgray"
                        android:textSize="@dimen/t_14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_yezhu_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="到达地址："
                        android:textColor="@color/gray_99"
                        android:textSize="@dimen/t_14sp" />

                    <TextView
                        android:id="@+id/tv_yezhu_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/blackgray"
                        android:textSize="@dimen/t_14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_yezhu_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="外出事项："
                        android:textColor="@color/gray_99"
                        android:textSize="@dimen/t_14sp" />

                    <TextView
                        android:id="@+id/tv_yezhu_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/blackgray"
                        android:textSize="@dimen/t_14sp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/txt_btn"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginTop="35dp"
            android:layout_marginRight="@dimen/margin_15"
            android:layout_marginBottom="35dp"
            android:background="@drawable/allshape_orange"
            android:gravity="center"
            android:text="重新提交"
            android:textColor="@color/white"
            android:textSize="@dimen/t_16sp"
            android:visibility="gone" />

    </LinearLayout>


</LinearLayout>
