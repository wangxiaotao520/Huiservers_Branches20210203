<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowbackground"
    android:orientation="vertical">

    <include layout="@layout/titlebar_center"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <LinearLayout
            android:id="@+id/ll_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="fill_parent"
                android:layout_height="90dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lin_yesaddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:paddingTop="15dp"
                        android:paddingLeft="15dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/txt_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="赵芸芸"
                                android:textSize="@dimen/t_16sp"
                                android:textColor="@color/title_color"/>

                            <TextView
                                android:id="@+id/txt_mobile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_20"
                                android:text="13065478547"
                                android:textSize="@dimen/t_14sp"
                                android:textColor="@color/title_third_color"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/txt_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:text="山西晋中榆次区新建街道山西省晋中市榆次区汇通路蕴华街路口，智慧社区"
                            android:textSize="@dimen/t_12sp"
                            android:textColor="@color/title_color"/>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/jiantou_you"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_noadress"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="50dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="38dp"
                            android:layout_marginTop="15dp"
                            android:layout_height="38dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@mipmap/iv_address"/>

                        <TextView
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="请选择一个收货地址"
                            android:layout_gravity="center_horizontal"
                            android:textSize="@dimen/t_14sp"
                            android:textColor="#bbbbbb"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="50dp"
                        android:layout_height="fill_parent">

                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/jiantou_you"/>
                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:background="@color/windowbackground"
            android:textColor="@color/title_sub_color"
            android:text="服务项目"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:textSize="14dp"
            android:layout_height="40dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_service_name"
                    android:layout_width="wrap_content"
                    android:textColor="@color/title_color"
                    android:text="家电清洗特惠套餐"
                    android:layout_gravity="center_vertical"
                    android:textSize="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/tv_unit_price"
                    android:layout_width="wrap_content"
                    android:textColor="@color/orange"
                    android:text="¥ 299.00"
                    android:layout_gravity="center_vertical"
                    android:textSize="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/title_color"
                    android:text="购买数量"
                    android:layout_gravity="center_vertical"
                    android:textSize="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_reduce"
                            android:layout_width="30dp"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:text="－"
                            android:textStyle="bold"
                            android:background="@color/windowbackground"
                            android:textColor="@color/text_color_hint"
                            android:textSize="14dp"/>

                    <EditText
                        android:id="@+id/edt_num"
                        android:layout_width="60dp"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:text="1"
                        android:maxLength="4"
                        android:inputType="number"
                        android:layout_marginRight="1dp"
                        android:layout_marginLeft="1dp"
                        android:background="@color/windowbackground"
                        android:textColor="@color/title_color"
                        android:textSize="14dp"/>
                    <TextView
                        android:id="@+id/tv_add"
                        android:layout_width="30dp"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:text="＋"
                        android:background="@color/windowbackground"
                        android:textColor="@color/title_color"
                        android:textStyle="bold"
                        android:textSize="14dp"/>

                </LinearLayout>
            </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:background="@color/windowbackground"
            android:textColor="@color/title_sub_color"
            android:text="订单备注"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:textSize="14dp"
            android:layout_height="40dp"/>

            <EditText
                android:id="@+id/edt_beizhu"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="top"
                android:padding="15dp"
                android:text=""
                android:hint="如有特殊需求可给商家留言哦~"
                android:textColorHint="@color/text_color_hint"
                android:background="@color/white"
                android:textColor="@color/title_color"
                android:maxLength="200"
                android:textSize="14dp"/>
        <TextView
            android:layout_width="match_parent"
            android:background="@color/windowbackground"
            android:textColor="@color/title_sub_color"
            android:text="购买须知"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:textSize="14dp"
            android:layout_height="40dp"/>

            <LinearLayout
                android:id="@+id/ll_note_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginBottom="35dp"
                android:padding="15dp">


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_marginLeft="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="¥"
                android:textStyle="bold"
                android:textColor="@color/orange" />
            <TextView
                android:id="@+id/tv_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text=""
                android:textStyle="bold"
                android:textColor="@color/orange" />
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_confirm_pay"
            android:layout_width="115dp"
            android:layout_height="38dp"
            android:background="@drawable/allshape_orange35"
            android:layout_gravity="center_vertical"
            android:text="确认支付"
            android:gravity="center"
            android:textColor="@color/text_special_ff_color"
            android:layout_marginRight="15dp"
            />

    </LinearLayout>
</LinearLayout>