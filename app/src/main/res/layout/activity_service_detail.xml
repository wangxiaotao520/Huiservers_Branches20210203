<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowbackground"
    android:fitsSystemWindows="false"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ly_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/status_bar"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/white"/>

        <RelativeLayout
            android:id="@+id/title_rel"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            >

            <LinearLayout
                android:id="@+id/lin_left"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:padding="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/ic_arrow_left_black"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:maxEms="10"
                android:singleLine="true"
                android:text="服务详情"
                android:textColor="@color/c_title12"
                android:textSize="18sp"/>

            <LinearLayout
                android:id="@+id/ly_share"
                android:layout_width="50dp"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@mipmap/ic_share_black"/>
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>

    <com.huacheng.huiservers.view.ScrollChangedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ly_title"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/ic_banner"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                fresco:placeholderImage="@drawable/ic_default_25"
                fresco:placeholderImageScaleType="centerCrop"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/margin_15">

                <TextView
                    android:id="@+id/title_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/grey"
                    android:textSize="@dimen/t_18sp"/>

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:text=""
                    android:textColor="@color/orange_bg"
                    android:textSize="23sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_select_cat"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/margin"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/margin_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择规格"
                    android:textColor="@color/gray_66"
                    android:textSize="@dimen/t_14sp"/>

                <TextView
                    android:id="@+id/tv_select_cat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/grey"
                    android:textSize="@dimen/t_14sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/jiantou_you"
                    />

                <com.huacheng.libraryservice.widget.ScrollviewListView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:visibility="gone"
                    ></com.huacheng.libraryservice.widget.ScrollviewListView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_store"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/margin"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/margin_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看商铺"
                    android:textColor="@color/gray_66"
                    android:textSize="@dimen/t_14sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/grey"
                    android:textSize="@dimen/t_14sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/jiantou_you"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_pingjia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:background="@color/white"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:id="@+id/ly_onclck_pingjia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_pingjia_num"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="@color/grey96"
                        android:textSize="@dimen/t_13sp"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="查看全部"
                            android:textColor="@color/orange_bg"
                            android:textSize="@dimen/t_13sp"/>

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:background="@color/orange_bg"/>
                    </LinearLayout>
                </LinearLayout>

                <include layout="@layout/layout_comment_item"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/windowbackground"
                    android:gravity="center">

                    <View
                        android:layout_width="40dp"
                        android:layout_height="1dp"
                        android:background="@color/gray4"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin"
                        android:layout_marginRight="@dimen/margin"
                        android:text="服务详情"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/t_14sp"/>

                    <View
                        android:layout_width="40dp"
                        android:layout_height="1dp"
                        android:background="@color/gray4"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@color/windowbackground"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/windowbackground"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_15"
                    android:orientation="horizontal">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/sinple_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        fresco:placeholderImage="@drawable/ic_default_rectange"
                        fresco:placeholderImageScaleType="centerCrop"
                        fresco:roundAsCircle="true"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_store_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/t_14sp"
                            tools:text="三国防生的合格后 "/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_store_coupon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/grey96"
                                android:textSize="@dimen/t_10sp"
                                tools:text="0个优惠券"/>

                            <TextView
                                android:id="@+id/tv_store_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_30"
                                android:textColor="@color/grey96"
                                android:textSize="@dimen/t_10sp"
                                tools:text="共0个商品"/>

                        </LinearLayout>

                        <com.zhy.view.flowlayout.TagFlowLayout
                            android:id="@+id/flowlayout"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            zhy:max_select="-1">
                        </com.zhy.view.flowlayout.TagFlowLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin"
                android:layout_marginLeft="@dimen/margin"
                android:scrollbars="none"
                android:visibility="gone"
                >

                <LinearLayout
                    android:id="@+id/ly_store_addview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </com.huacheng.huiservers.view.ScrollChangedScrollView>


    <LinearLayout
        android:id="@+id/ly_bottom"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ly_call"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/ic_service_phone_call"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系商家"
                android:textColor="@color/grey"
                android:textSize="@dimen/t_12sp"/>
        </LinearLayout>


        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@color/windowbackground"/>

        <TextView
            android:id="@+id/tv_btn"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_weight="3"
            android:background="@drawable/allshape_orange35"
            android:gravity="center"
            android:text="立即预约"
            android:textColor="@color/white"
            android:textSize="@dimen/t_15sp"/>

    </LinearLayout>

</RelativeLayout>