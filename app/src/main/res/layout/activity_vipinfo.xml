<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowbackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:orientation="vertical">

        <View
            android:id="@+id/status_bar"
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize">

            <com.huacheng.huiservers.view.SquareImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@mipmap/ic_arrow_left_white" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="我的等级"
                android:textColor="@color/white"
                android:textSize="@dimen/t_18sp" />


        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15">

            <LinearLayout
                android:id="@+id/vip_history"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/grow_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7365"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_18" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:text="我的成长值"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/avator"
                    android:layout_width="@dimen/public_space_value_65"
                    android:layout_height="@dimen/public_space_value_65"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_8"
                    android:background="@color/default_img_color" />

                <TextView
                    android:id="@+id/level"
                    android:layout_width="35dp"
                    android:layout_height="17dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:background="@drawable/bg_shape_btn_rounded_rect_red"
                    android:gravity="center"
                    android:text="LV1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_11" />


            </FrameLayout>

            <LinearLayout
                android:id="@+id/point_history"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1080"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_18" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:text="我的积分"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin"
            android:text="李大嘴"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/need"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_20"
            android:text="还需350成长值升级LV4"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14" />


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/margin"
        android:paddingTop="@dimen/margin"
        android:paddingRight="@dimen/margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_5"
            android:text="我的会员"
            android:textColor="@color/title_color"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/vip_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="@dimen/margin_5"
            android:drawableRight="@mipmap/ic_arrow_right_grey"
            android:drawablePadding="@dimen/margin_5"
            android:text="查看详情"
            android:textColor="@color/title_third_color"
            android:textSize="@dimen/text_size_13" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/margin_15">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/grow_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1945/"
                android:textColor="@color/orange"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/grow_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3006"
                android:textColor="@color/title_third_color"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/levelbar"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/margin"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_15" />

    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/margin"
        android:paddingTop="@dimen/margin"
        android:paddingRight="@dimen/margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_5"
            android:text="我的特权"
            android:textColor="@color/title_color"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/privilege_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:drawablePadding="@dimen/margin_5"
            android:padding="@dimen/margin_5"
            android:text="查看详情"
            android:textColor="@color/title_third_color"
            android:textSize="@dimen/text_size_13" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/margin_15">

        <LinearLayout
            android:id="@+id/sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ImageView
                android:layout_width="@dimen/public_space_value_30"
                android:layout_height="@dimen/public_space_value_30"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_20"
                android:background="@color/default_img_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:layout_marginBottom="@dimen/margin_15"
                android:text="签到送积分"
                android:textColor="@color/title_color"
                android:textSize="@dimen/text_size_13" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/identity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ImageView
                android:layout_width="@dimen/public_space_value_30"
                android:layout_height="@dimen/public_space_value_30"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_20"
                android:background="@color/default_img_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:layout_marginBottom="@dimen/margin_15"
                android:text="身份铭牌"
                android:textColor="@color/title_color"
                android:textSize="@dimen/text_size_13" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/point_mall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ImageView
                android:layout_width="@dimen/public_space_value_30"
                android:layout_height="@dimen/public_space_value_30"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_20"
                android:background="@color/default_img_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:layout_marginBottom="@dimen/margin_15"
                android:text="积分商城"
                android:textColor="@color/title_color"
                android:textSize="@dimen/text_size_13" />

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/open_vip"
        android:layout_width="match_parent"
        android:layout_height="@dimen/public_space_value_100"
        android:layout_marginTop="@dimen/public_space_value_30"
        android:background="@color/default_img_color" />

</LinearLayout>