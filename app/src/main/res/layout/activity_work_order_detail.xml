<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:xlhRatingBar="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/windowbackground">
    <!--写所有页面-->
    <RelativeLayout
        android:id="@+id/rl_all"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lin_left"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_15">

            <ImageView
                android:layout_width="17dp"
                android:layout_height="18dp"
                android:background="@drawable/arrow_left"/>
        </LinearLayout>

        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:ellipsize="end"
            android:maxEms="10"
            android:singleLine="true"
            android:text="订单详情"
            android:textColor="@color/text_color"
            android:textSize="20sp"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="88dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin"
            android:background="@drawable/allshape_gray4"
            android:gravity="center"
            android:text="取消订单"
            android:textColor="@color/gray_9c"
            android:textSize="@dimen/t_18sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_pay_pingjia"
            android:layout_width="58dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin"
            android:background="@drawable/allshape_orange_2"
            android:gravity="center"
            android:padding="@dimen/margin_5"
            android:text="评价"
            android:textColor="@color/white"
            android:textSize="@dimen/t_18sp"
            android:visibility="gone"/>
    </RelativeLayout>

    <ScrollView
        android:layout_below="@+id/rl_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/windowbackground">

        <LinearLayout
            android:id="@+id/ly_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/ry_ID_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_12"
                android:layout_marginRight="@dimen/margin_12"
                android:layout_marginTop="@dimen/margin_12"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_ordert_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单编号："
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/t_15sp"/>

                <TextView
                    android:id="@+id/tv_price_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_ordert_num"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/t_18sp"
                    android:textStyle="bold"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_12"
                android:background="@drawable/bg_round_white"
                android:orientation="vertical"
                android:padding="@dimen/margin"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="迎宾合作住宅区"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/t_15sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_master_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="范雅"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/t_18sp"/>

                    <TextView
                        android:id="@+id/tv_master_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin"
                        android:text="13233696139"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/t_15sp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/margin"
                    android:layout_marginTop="@dimen/margin"
                    android:background="@color/windowbackground"/>

                <TextView
                    android:id="@+id/tv_repair_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="更换开关"
                    android:textColor="@color/text_color"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/margin"
                    android:layout_marginTop="@dimen/margin"
                    android:background="@color/windowbackground"/>

                <com.huacheng.libraryservice.widget.GridViewNoScroll
                    android:id="@+id/gridview_imgs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fadingEdge="none"
                    android:fastScrollEnabled="false"
                    android:footerDividersEnabled="false"
                    android:gravity="center"
                    android:headerDividersEnabled="false"
                    android:horizontalSpacing="5dp"
                    android:listSelector="@android:color/transparent"
                    android:numColumns="4"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="10dp"/>

                <TextView
                    android:id="@+id/tv_repair_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="维修备注：暂无或者释迦佛苏丹红疯狂和山东分哈搜"
                    android:textColor="@color/gray_9c"
                    android:textSize="@dimen/t_13sp"/>

                <View
                    android:id="@+id/view_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/margin"
                    android:layout_marginTop="@dimen/margin"
                    android:background="@color/windowbackground"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_round_white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ly_xiadan_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_order_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="下单时间：2018-12-10 15:25"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/t_15sp"/>

                        <TextView
                            android:id="@+id/tv_paidan_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:text="派单时间：2018-12-10 15:25"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/t_15sp"/>

                        <com.huacheng.libraryservice.widget.GridViewNoScroll
                            android:id="@+id/gridview_repair_person"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_5"
                            android:layout_marginTop="@dimen/margin_5"
                            android:fadingEdge="none"
                            android:fastScrollEnabled="false"
                            android:footerDividersEnabled="false"
                            android:gravity="center"
                            android:headerDividersEnabled="false"
                            android:horizontalSpacing="5dp"
                            android:listSelector="@android:color/transparent"
                            android:numColumns="4"
                            android:stretchMode="columnWidth"
                            android:verticalSpacing="10dp"/>

                        <TextView
                            android:id="@+id/tv_all_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:text=""
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/t_15sp"/>

                        <TextView
                            android:id="@+id/tv_jindu_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:text=""
                            android:textColor="@color/gray_9c"
                            android:textSize="@dimen/t_15sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ly_finish"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="@dimen/margin"
                            android:layout_marginTop="@dimen/margin"
                            android:background="@color/windowbackground"/>

                        <TextView
                            android:id="@+id/tv_all_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="服务用时：3小时15分钟"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/t_15sp"/>

                        <TextView
                            android:id="@+id/tv_order_finish"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:text="订单完成：2018-12-10 15:25"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/t_15sp"/>

                        <com.huacheng.libraryservice.widget.GridViewNoScroll
                            android:id="@+id/gridview_finish_imgs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_5"
                            android:layout_marginTop="@dimen/margin_5"
                            android:fadingEdge="none"
                            android:fastScrollEnabled="false"
                            android:footerDividersEnabled="false"
                            android:gravity="center"
                            android:headerDividersEnabled="false"
                            android:horizontalSpacing="5dp"
                            android:listSelector="@android:color/transparent"
                            android:numColumns="4"
                            android:stretchMode="columnWidth"
                            android:verticalSpacing="10dp"/>

                        <TextView
                            android:id="@+id/tv_master_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:text="完工备注：暂无或者释迦佛苏丹红疯狂和山东分哈搜"
                            android:textColor="@color/gray_9c"
                            android:textSize="@dimen/t_13sp"/>

                        <LinearLayout
                            android:id="@+id/ly_pingjia"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_5"
                                android:text="服务评分："
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/t_15sp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin"
                                android:layout_marginTop="@dimen/margin_5"
                                android:orientation="vertical">

                                <com.example.xlhratingbar_lib.XLHRatingBar xmlns:xlhRatingBar="http://schemas.android.com/apk/res-auto"
                                                                           android:id="@+id/ratingBar"
                                                                           android:layout_width="wrap_content"
                                                                           android:layout_height="wrap_content"
                                                                           xlhRatingBar:canEdit="false"
                                                                           xlhRatingBar:differentSize="false"
                                                                           xlhRatingBar:dividerWidth="2dp"
                                                                           xlhRatingBar:starCount="5"
                                                                           xlhRatingBar:stateResId="@drawable/layer_rating_bar_heart"
                                                                           xlhRatingBar:widthAndHeight="20dp"/>

                                <TextView
                                    android:id="@+id/tv_pingjia_content"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_5"
                                    android:text="备注：暂无或者释迦佛苏丹红疯狂和山东分哈搜"
                                    android:textColor="@color/gray_9c"
                                    android:textSize="@dimen/t_13sp"/>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_round_white"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="@dimen/margin"
                        android:layout_marginTop="@dimen/margin"
                        android:background="@color/windowbackground"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="订单已取消"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/t_15sp"/>

                    <TextView
                        android:id="@+id/tv_cancel_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:text="等待1~3个工作日退还您支付的预付费用"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/t_13sp"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <!--写所有页面-->
    <RelativeLayout
        android:id="@+id/rl_yufu"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_yufu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:ellipsize="end"
            android:maxEms="10"
            android:singleLine="true"
            android:text="预付金额:"
            android:textColor="@color/text_color"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_yufu_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_yufu"
            android:gravity="center"
            android:text="5元"
            android:textColor="@color/orange"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_pay_button"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin"
            android:background="@drawable/allshape_orange"
            android:gravity="center"
            android:padding="@dimen/margin_5"
            android:text="支付预付款"
            android:textColor="@color/white"
            android:textSize="@dimen/t_18sp"
            android:visibility="visible"/>
    </RelativeLayout>
</RelativeLayout>
