<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/windowbackground"
        android:orientation="vertical">

        <include layout="@layout/titlebar_center" />

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:id="@+id/rel_select_tag"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/ll_select_tag"
                android:layout_width="87dp"
                android:layout_height="@dimen/margin_50"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/rent_release_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="报修类型"
                    android:textSize="16sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_marginRight="14dp"
                android:background="@mipmap/ic_arrow_down_black" />

            <TextView
                android:id="@+id/tv_select_tag"
                style="@style/rent_release_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/iv_arrow"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text=""
                android:textColor="@color/gray_9c" />

        </RelativeLayout>
        <TextView
            android:id="@+id/tv_yufu"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="12dp"
            android:text="预付费用：5元（此费用包含在订单总价内）"
            android:textColor="@color/orange"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:textSize="13sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="18dp"
            android:paddingLeft="@dimen/margin_12"
            android:paddingRight="@dimen/margin_12"
            android:paddingTop="@dimen/margin_12">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="维修备注"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_beizhu"
                style="@style/rent_release_text"
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_shape_stoke_grey"
                android:gravity="top"
                android:hint="请描述维修问题"
                android:padding="10dp"
                android:text=""
                android:textColorHint="@color/gray_9c" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="18dp"
            android:paddingRight="@dimen/margin_12"
            android:paddingTop="18dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="上传故障照片"
                    android:textColor="@color/text_color"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text=" 最多上传4张照片"
                    android:textColor="@color/gray_9c"
                    android:textSize="13sp" />
            </LinearLayout>

            <com.huacheng.libraryservice.widget.GridViewNoScroll
                android:id="@+id/gridview_imgs"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="@dimen/margin_8"
                android:layout_marginTop="15dp"
                android:fadingEdge="none"
                android:fastScrollEnabled="false"
                android:footerDividersEnabled="false"
                android:gravity="center"
                android:headerDividersEnabled="false"
                android:horizontalSpacing="5dp"
                android:listSelector="@android:color/transparent"
                android:numColumns="4"
                android:stretchMode="columnWidth"
                android:verticalSpacing="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_house"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginTop="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <RelativeLayout
                android:id="@+id/rel_select_house"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_50"
                android:background="@color/white">
                    <TextView
                        style="@style/rent_release_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="选择房屋"
                        android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_arrow_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="14dp"
                    android:background="@mipmap/ic_arrow_right" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    style="@style/rent_release_text"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textSize="16sp" />
                <EditText
                    android:id="@+id/et_name"
                    style="@style/rent_release_text"
                    android:layout_width="150dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_shape_stoke_grey"
                    android:gravity="center_vertical"
                    android:hint=""
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColorHint="@color/gray_9c" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    style="@style/rent_release_text"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="手机号"
                    android:textSize="16sp" />
                <EditText
                    android:id="@+id/et_phone"
                    style="@style/rent_release_text"
                    android:layout_width="150dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_shape_stoke_grey"
                    android:gravity="center_vertical"
                    android:hint=""
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColorHint="@color/gray_9c" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="18dp"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/text_color"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="房屋"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tv_address"
                    style="@style/rent_release_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="top"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="vertical"
            android:layout_marginBottom="30dp"
            android:paddingBottom="@dimen/margin"
            android:paddingTop="@dimen/margin">

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/allshape_orange35"
                android:gravity="center"
                android:text="提交订单"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>
