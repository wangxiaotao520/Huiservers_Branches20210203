<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:paddingBottom="@dimen/margin_15"
            android:paddingLeft="@dimen/margin_15"
            android:paddingTop="25dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/t_16sp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="@dimen/margin_15"
            android:paddingRight="@dimen/margin_15"
            android:paddingTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_order_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有线电视缴费："
                    android:textColor="@color/orange5"
                    android:textSize="@dimen/t_18sp"/>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="15dp">

            <TextView
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/circle_gray"
                android:gravity="center"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_xu"
                android:gravity="center"
                android:layerType="software"

                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/margin_15"
            android:paddingLeft="@dimen/margin_15"
            android:paddingRight="@dimen/margin_15"
            android:paddingTop="@dimen/margin_15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_order_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="付款编号："
                    android:textColor="@color/black"
                    android:textSize="@dimen/t_14sp"/>

                <LinearLayout
                    android:id="@+id/lin_fullname_house"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_paytype"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:singleLine="true"
                        android:text="缴费方式："
                        android:textColor="@color/black"
                        android:textSize="@dimen/t_14sp"/>

                    <TextView
                        android:id="@+id/tv_wtredID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="卡号："
                        android:textColor="@color/black"
                        android:textSize="@dimen/t_14sp"/>

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="姓名："
                        android:textColor="@color/black"
                        android:textSize="@dimen/t_14sp"/>

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="15dp">

            <TextView
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/circle_gray"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_xu"
                android:gravity="center"
                android:layerType="software"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_kaitong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_15"
            android:paddingLeft="@dimen/margin_15"
            android:paddingRight="@dimen/margin_15"
            android:paddingTop="@dimen/margin"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_kaitong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="开通状态：已开通"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/t_18sp"/>

            <TextView
                android:id="@+id/tv_kaitong_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="开通时间："
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/t_14sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_nokaitong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_15"
            android:paddingLeft="@dimen/margin_15"
            android:paddingRight="@dimen/margin_15"
            android:paddingTop="@dimen/margin"
            android:text="开通状态：未开通"
            android:visibility="gone"
            android:background="@color/white"
            android:textColor="@color/black_jain_26"
            android:textSize="@dimen/t_18sp"/>

    </LinearLayout>

</LinearLayout>