<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_gravity="center"
        android:textAppearance="?attr/DialogTitleAppearance"
        android:text="?attr/DialogTitleText"
        android:textSize="@dimen/t_14sp"/>

    <com.huacheng.huiservers.dialog.ProgressLayout
        android:id="@+id/progress"
        android:layout_width="@dimen/One_hundred_and_fifty"
        android:layout_height="@dimen/margin"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_5"/>

</LinearLayout>