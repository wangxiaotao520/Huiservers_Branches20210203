<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_45"
        android:background="@drawable/shape_whtie_top_left_right"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/margin_15"
            android:text="收费详情"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/t_16sp"/>

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_delete_charge"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/windowbackground"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/margin_15">

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:text="迎宾小区车棚"
            android:textColor="@color/blackgray"
            android:textSize="@dimen/t_16sp"/>

        <TextView
            android:id="@+id/tv_bianhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            android:text="设备编号：25464646546"
            android:textColor="@color/gray_99"
            android:textSize="@dimen/t_12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:text="收费标准"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/t_16sp"/>

        <TextView
            android:id="@+id/tv_biaozhun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            android:text="1元/6小时"
            android:textColor="@color/blackgray"
            android:textSize="@dimen/t_12sp"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:text="未使用的金额将在3个工作日内原路返回"
            android:textColor="@color/orange_bg"
            android:textSize="@dimen/t_16sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_30"/>
    </LinearLayout>

</LinearLayout>