<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/allshape_half_rectange_5"
        android:layout_height="45dp">

        <TextView
            android:textColor="@color/title_color"
            android:text="优惠"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:textSize="18dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/back"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:background="@mipmap/ic_shop_guige_delete"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/line"
        android:layout_height="1px"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="400dp">

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:divider="@null"
            android:fastScrollEnabled="false"
            android:listSelector="@android:color/transparent"
            android:smoothScrollbar="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/ll_no_data"
            android:visibility="gone"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_data"
                android:layout_width="238dp"
                android:layout_height="180dp"
                android:background="@mipmap/bg_no_coupon_data" />
            <TextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无优化券"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/title_third_color"
                android:textSize="15dp" />
        </LinearLayout>

    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_btn"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_margin="@dimen/margin"
            android:background="@drawable/allshape_red_shopdetail35"
            android:gravity="center"
            android:text="完 成"
            android:textColor="@color/text_special_ff_color"
            android:visibility="visible"
            android:textSize="16sp"/>
    </FrameLayout>
</LinearLayout>