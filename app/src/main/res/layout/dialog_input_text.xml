<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_outside_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/rl_inputdlg_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">



        <!--<View android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:background="@color/colorTransparentBlack"/>-->

        <EditText
            android:id="@+id/et_input_message"
            android:hint="请输入你想说得内容"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="70dp"
            android:padding="10dp"
            android:gravity="top"
            android:text=""
            android:imeOptions="actionUnspecified"
            android:textSize="14sp"
            android:textColor="@color/title_color"
            android:textColorHint="@color/text_color_hint"
            android:background="@drawable/allshape_gray_f8" />


        <LinearLayout
            android:id="@+id/confirm_area"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/confrim_btn"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/allshape_gray_f8"
                android:gravity="center"
                android:textColor="@color/title_third_color"
                android:textSize="14sp"
                android:text="发送" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>