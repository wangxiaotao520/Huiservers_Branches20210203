<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_white5"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_15"
    android:paddingTop="@dimen/margin_20"
    android:paddingRight="@dimen/margin_15">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="如何获得成长值"
        android:textColor="@color/title_color"
        android:textSize="@dimen/t_15sp" />


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:text="每天最高获得1000点成长值，获取方式如下：1.订单支付金额、物业缴费金额、物业服务支付金额等1：1转化为成长值"
        android:layout_marginBottom="@dimen/margin_15"
        android:textColor="@color/title_sub_color"
        android:textSize="@dimen/t_12sp" />


    <TextView
        android:id="@+id/tv_argee"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingTop="@dimen/margin_12"
        android:paddingBottom="@dimen/margin_12"
        android:gravity="center"
        android:text="我知道了"
        android:textColor="@color/orange"
        android:textSize="@dimen/t_16sp" />


</LinearLayout>