<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:background="@drawable/bg_round_white5"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/margin_20"
            android:paddingTop="29dp"
            android:text="用户隐私政策概要"
            android:textColor="@color/title_color"
            android:textSize="@dimen/t_18sp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="39dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/t_14sp"
                    />
            </LinearLayout>
        </ScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_de"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_45"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="退出APP"
                android:textColor="@color/title_color"
                android:textSize="@dimen/t_16sp"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/line_de"/>

            <TextView
                android:id="@+id/tv_argee"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="同意"
                android:textColor="#2A78FE"
                android:textSize="@dimen/t_16sp"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>