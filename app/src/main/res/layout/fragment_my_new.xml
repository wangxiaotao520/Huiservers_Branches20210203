<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout
    android:id="@+id/refreshLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/windowbackground"
            android:paddingBottom="50dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/sdv_head"
                        android:layout_width="67dp"
                        android:layout_height="67dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        fresco:placeholderImage="@drawable/facehead1"
                        fresco:roundAsCircle="true" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="17dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_user_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_color"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                tools:text="王雅倩" />

                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_user_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/text_color"
                            android:textSize="13sp"
                            android:textStyle="normal"
                            tools:text="15864586527" />
                        <TextView
                            android:id="@+id/tv_user_identify"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/text_color"
                            android:textSize="13sp"
                            android:layout_marginTop="5dp"
                            android:textStyle="normal"
                            tools:text="请绑定住宅 >" />

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:weightSum="4">
                <!--生活账单-->
                <RelativeLayout
                    android:id="@+id/rl_community_bill_list"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@mipmap/ic_shenghuozhangdang" />
                        <TextView
                            android:textColor="@color/text_color"
                            android:layout_marginTop="11dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="生活账单" />
                    </LinearLayout>
                </RelativeLayout>
                <!--保修账单-->
                <RelativeLayout
                    android:id="@+id/rl_baoxiu_order_list"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@mipmap/ic_baoxiudingdan" />
                        <TextView
                            android:textColor="@color/text_color"
                            android:layout_marginTop="11dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="物业工单" />
                    </LinearLayout>
                </RelativeLayout>
                <!--服务订单-->
                <RelativeLayout
                    android:id="@+id/rl_service_order_list"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@mipmap/ic_fuwudingdan" />
                        <TextView
                            android:textColor="@color/text_color"
                            android:layout_marginTop="11dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="服务订单" />
                    </LinearLayout>
                </RelativeLayout>
                <!--商城订单-->
                <RelativeLayout
                    android:id="@+id/rl_shop_order_list"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@mipmap/ic_shangchengdingdan" />
                        <TextView
                            android:textColor="@color/text_color"
                            android:layout_marginTop="11dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="商城订单" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="25dp"
                android:background="@color/white">

                <RelativeLayout
                    android:id="@+id/ry_fang"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="8dp"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="14dp"
                        android:src="@drawable/fangkeyaoqing2x"/>

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="29dp"
                        android:layout_toRightOf="@id/img1"
                        android:text="访客邀请"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/t_16sp"/>

                    <TextView
                        android:id="@+id/tv_guest_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="9dp"
                        android:layout_marginRight="20dp"
                        android:text=""
                        android:textColor="@color/orange_jain"
                        android:textSize="@dimen/t_14sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="right"
                        android:background="@drawable/jiantou_you"
                        android:layout_marginRight="8dp"
                        />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp" />


                <RelativeLayout
                    android:id="@+id/rel_coupon"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:layout_marginLeft="8dp">

                    <ImageView
                        android:id="@+id/img7"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="14dp"
                        android:src="@drawable/ic_coupon2x"/>

                    <TextView
                        android:id="@+id/tv7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="29dp"
                        android:layout_toRightOf="@id/img7"
                        android:text="优惠券"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/t_16sp"/>

                    <TextView
                        android:id="@+id/tv_coupon_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="9dp"
                        android:layout_marginRight="20dp"
                        android:text=""
                        android:textColor="@color/orange_jain"
                        android:textSize="@dimen/t_14sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="right"
                        android:background="@drawable/jiantou_you"
                        android:layout_marginRight="8dp"
                        />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp" />

                <RelativeLayout
                    android:id="@+id/ry_my_renvation"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="8dp"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="14dp"
                        android:src="@drawable/zhuangxiu2x"/>

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="29dp"
                        android:layout_toRightOf="@id/img2"
                        android:text="我的装修"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/t_16sp"/>

                    <TextView
                        android:id="@+id/tv_decoration_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="9dp"
                        android:layout_marginRight="20dp"
                        android:text=""
                        android:textColor="@color/orange_jain"
                        android:textSize="@dimen/t_14sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="right"
                        android:background="@drawable/jiantou_you"
                        android:layout_marginRight="8dp"
                        />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp" />

                <RelativeLayout
                    android:id="@+id/rel_myCircle"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:layout_marginLeft="8dp">

                    <ImageView
                        android:id="@+id/img8"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="14dp"
                        android:src="@drawable/wodequanzi2x_13"/>

                    <TextView
                        android:id="@+id/tv8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="29dp"
                        android:layout_toRightOf="@id/img8"
                        android:text="我的邻里"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/t_16sp"/>

                    <TextView
                        android:id="@+id/tv_social_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="9dp"
                        android:layout_marginRight="20dp"
                        android:text=""
                        android:textColor="@color/orange_jain"
                        android:textSize="@dimen/t_14sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="right"
                        android:background="@drawable/jiantou_you"
                        android:layout_marginRight="8dp"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp" />

                <RelativeLayout
                    android:id="@+id/rel_gouwuche"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:layout_marginLeft="8dp">

                    <ImageView
                        android:id="@+id/img4"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="14dp"
                        android:src="@drawable/gouwuche2x_07"/>

                    <TextView
                        android:id="@+id/tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="29dp"
                        android:layout_toRightOf="@id/img4"
                        android:text="购物车"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/t_16sp"/>

                    <TextView
                        android:id="@+id/tv_cart_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="9dp"
                        android:layout_marginRight="20dp"
                        android:text=""
                        android:textColor="@color/orange_jain"
                        android:textSize="@dimen/t_14sp"/>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="right"
                        android:background="@drawable/jiantou_you"
                        android:layout_marginRight="8dp"
                        />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp" />


                <RelativeLayout
                    android:id="@+id/rel_xiaofejilu"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:layout_marginLeft="8dp">

                    <ImageView
                        android:id="@+id/img5"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="14dp"
                        android:src="@drawable/xiaofeijilu_11"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="29dp"
                        android:layout_toRightOf="@id/img5"
                        android:text="消费记录"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/t_16sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="right"
                        android:background="@drawable/jiantou_you"
                        android:layout_marginRight="8dp"
                        />
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp" />


                <RelativeLayout
                    android:id="@+id/ry_set"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:layout_marginLeft="8dp">

                    <ImageView
                        android:id="@+id/img10"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="14dp"
                        android:src="@drawable/shezhi2x_15"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="29dp"
                        android:layout_toRightOf="@id/img10"
                        android:text="设置"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/t_16sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="right"
                        android:background="@drawable/jiantou_you"
                        android:layout_marginRight="8dp"
                        />
                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>



