<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:visibility="visible">
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_check"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_shop_no"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="2dp"
                android:visibility="gone"
                />
            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_timeInterval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-07-08/2019-07-08"
                android:textColor="@color/gray_55"
                android:textSize="@dimen/t_15sp" />

        </LinearLayout>


        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_timePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2283.22å…ƒ"
            android:textColor="@color/gray_55"
            android:textSize="@dimen/t_15sp" />

    </RelativeLayout>

</LinearLayout>
