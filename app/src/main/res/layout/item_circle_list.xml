<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ly_admin"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_12"
        android:paddingLeft="@dimen/margin_15"
        android:paddingRight="@dimen/margin_15"
        android:paddingTop="@dimen/margin_12">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/margin_5"
                android:maxLines="2"
                android:text="社区慧生活第二轮直购直播马上开启，预告走一波！"
                android:textColor="@color/title_color"
                android:textSize="@dimen/t_15sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_catname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="社区公告"
                    android:textColor="@color/gray_99"
                    android:textSize="@dimen/t_12sp"/>

                <TextView
                    android:id="@+id/tv_readnum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_weight="1"
                    android:text="1245阅读"
                    android:textColor="@color/gray_99"
                    android:textSize="@dimen/t_12sp"/>

                <TextView
                    android:id="@+id/tv_addtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30分钟前"
                    android:textColor="@color/gray_99"
                    android:textSize="@dimen/t_12sp"/>
            </LinearLayout>
        </RelativeLayout>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_head"
            android:layout_width="95dp"
            android:layout_height="75dp"
            android:layout_marginLeft="@dimen/margin_40"
            fresco:placeholderImage="@drawable/icon_girdview"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:roundedCornerRadius="@dimen/margin_5"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:background="@color/windowbackground"/>

</LinearLayout>