<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#f8f8f8"
        android:text="附近小区"
        android:paddingLeft="12dp"
        android:gravity="center_vertical"
        android:textColor="#555555"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/ll_name_address"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            >
            <TextView
            android:id="@+id/tv_community_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="智慧小区"
            android:textColor="#555555"
            android:textSize="16sp"
            android:textStyle="normal"
            />
            <TextView
                android:visibility="gone"
            android:id="@+id/tv_community_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="晋中市榆次区流动北街149号"
            android:textColor="@color/gray_9c"
            android:textSize="12sp"
            android:textStyle="normal"
                android:layout_marginTop="5dp"
            />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_relocation"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:background="@mipmap/ic_re_location"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp" />
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_relocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重新定位"
            android:textColor="@color/orange"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="#f1f1f1" />
</LinearLayout>