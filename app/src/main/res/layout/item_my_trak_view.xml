<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ly_tag1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_data"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="08:44"
            android:textColor="@color/title_color"
            android:textSize="@dimen/t_13sp" />

        <RelativeLayout
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:orientation="vertical">

            <View
                android:id="@+id/view1"
                android:layout_width="1dp"
                android:layout_height="11dp"
                android:layout_centerHorizontal="true"
                android:background="@color/line_de" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/ic_zuji3" />

            <View
                android:id="@+id/view2"
               android:layout_alignParentBottom="true"
                android:layout_width="1dp"
                android:layout_centerHorizontal="true"
                android:layout_height="11dp"
                android:background="@color/line_de" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:text="到 榆次区新建街道汇通路兴建花园(汇通路）"
            android:textColor="@color/title_color"
            android:textSize="@dimen/t_13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_tag2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFF6E2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="08:44"
                android:textColor="@color/title_color"
                android:textSize="@dimen/t_13sp" />

            <RelativeLayout
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:orientation="vertical">

                <View
                    android:id="@+id/view3"
                    android:layout_width="1dp"
                    android:layout_height="8dp"
                    android:layout_centerHorizontal="true"
                    android:background="@color/line_de" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/ic_old_zuji2" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="8dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@color/line_de"  />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_start_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:text="到 榆次区新建街道汇通路兴建花园(汇通路）"
                android:textColor="@color/title_color"
                android:textSize="@dimen/t_13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="08:44"
                android:textColor="@color/title_color" />

            <RelativeLayout
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:orientation="vertical">

                <View
                    android:layout_width="1dp"
                    android:layout_height="8dp"
                    android:layout_centerHorizontal="true"
                    android:background="@color/line_de"/>

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/ic_old_zuji2" />

                <View
                    android:id="@+id/view4"
                    android:layout_width="1dp"
                    android:layout_height="8dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@color/line_de" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_end_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:text="停留了38分钟"
                android:textColor="@color/blue" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>