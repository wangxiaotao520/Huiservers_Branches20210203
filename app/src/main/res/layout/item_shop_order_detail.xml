<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/margin_15">

        <TextView
            android:id="@+id/tv_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            android:paddingLeft="@dimen/margin_15"
            android:text="迎宾超市"
            android:textColor="@color/grey"
            android:textSize="@dimen/t_14sp"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/ly_onclick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <RelativeLayout
                android:layout_width="91dp"
                android:layout_height="90dp">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdv_one"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:placeholderImage="@color/default_color"
                    app:placeholderImageScaleType="centerCrop"
                    app:roundedCornerRadius="5dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_title_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="【三只小熊】超级网红大dfasasfdsafdsadf"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/t_15sp"/>

                    <TextView
                        android:id="@+id/tv_sub_title_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="食用油中的吴彦祖，买上就是赚到"
                        android:textColor="@color/gray_99"
                        android:textSize="@dimen/t_12sp"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_price_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="17dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_shop_price_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥ 9.90"
                        android:textColor="#FF625e"
                        android:textSize="@dimen/t_18sp"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/tv_num_one"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="9dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="× 1"
                        android:textColor="@color/gray_99"
                        android:textSize="@dimen/t_14sp"/>

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_btn"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:gravity="center"
            android:text=""
            android:textColor="@color/grey"
            android:textSize="@dimen/t_13sp"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>