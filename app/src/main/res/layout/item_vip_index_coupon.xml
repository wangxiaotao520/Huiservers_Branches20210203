<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginRight="@dimen/margin"
        android:id="@+id/ry_bg"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_vip_index_coupon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:background="@drawable/shape_vip_solid5_lefttop_rightbottom"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_5"
            android:paddingRight="@dimen/margin_5"
            android:text="会员专享"
            android:textColor="@color/white"
            android:textSize="@dimen/t_10sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_tag"
            android:layout_marginLeft="@dimen/margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/t_16sp" />

                <TextView
                    android:id="@+id/tv_coupon_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9.8"
                    android:textColor="@color/orange"
                    android:textSize="23sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="满5000元可用"
                android:textColor="@color/orange"
                android:textSize="@dimen/t_12sp" />

            <TextView
                android:id="@+id/tv_coupon_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin"
                android:text="平台优惠券"
                android:textColor="@color/orange"
                android:textSize="@dimen/t_10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_original_price"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="立\n即\n领\n取"
            android:textColor="@color/orange"
            android:textSize="@dimen/t_10sp" />


    </RelativeLayout>

</LinearLayout>