<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ly_bg"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@drawable/allshape_stroke_grey_bb"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单月VIP"
            android:textColor="@color/title_color"
            android:textSize="@dimen/t_16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="#D4AB69"
                android:textSize="@dimen/t_16sp" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9.8"
                android:textColor="#D4AB69"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_original_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10.0/月"
            android:textColor="@color/title_third_color"
            android:textSize="@dimen/t_12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:background="@drawable/shape_vip_solid2"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_5"
            android:paddingLeft="@dimen/margin"
            android:paddingRight="@dimen/margin"
            android:text="单月购买续费"
            android:textColor="@color/white"
            android:textSize="@dimen/t_10sp"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>