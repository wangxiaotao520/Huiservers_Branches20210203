<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_15"
        android:paddingLeft="@dimen/margin"
        android:paddingRight="@dimen/margin_15"
        android:paddingTop="@dimen/margin_15">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_workorderadress"/>

            <TextView
                android:id="@+id/tv_adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:text="迎宾合作住宅小区57号楼2单元501"
                android:textColor="@color/text_color"
                android:textSize="@dimen/t_14sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/allshape_new_work"
                android:paddingBottom="4dp"
                android:paddingLeft="@dimen/margin"
                android:paddingRight="@dimen/margin"
                android:paddingTop="4dp"
                android:text="段凡凡"
                android:textColor="@color/text_color_hint"
                android:textSize="@dimen/t_12sp"/>

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:background="@drawable/allshape_new_work"
                android:paddingBottom="4dp"
                android:paddingLeft="@dimen/margin"
                android:paddingRight="@dimen/margin"
                android:paddingTop="4dp"
                android:text="13233696139"
                android:textColor="@color/text_color_hint"
                android:textSize="@dimen/t_12sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:text="自用报修"
            android:textColor="@color/title_color"
            android:textSize="17sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin">

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="自用报修自用报修自用报修自用报修自用报修自用报修自用报修自用报修"
                android:textColor="@color/text_color"
                android:textSize="@dimen/t_15sp"/>


            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="待增派"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/t_15sp"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>