    <!--租售服务-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="租售服务"
                android:textColor="@color/text_color"
                android:textSize="@dimen/t_18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:text="租赁买卖 安心放心"
                android:textColor="@color/gray_9c"
                android:textSize="@dimen/t_13sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_15"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ly_houseRent"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_home_property1"
                android:gravity="center"
                android:orientation="vertical"
                >


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="@mipmap/ic_home_rent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_2"
                        android:layout_toRightOf="@+id/img"
                        android:text="找物业租房"
                        android:textColor="@color/white"
                        android:textSize="@dimen/t_13sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img"
                        android:layout_marginTop="@dimen/margin_5"
                        android:text="安全便捷放心舒心"
                        android:textColor="@color/white"
                        android:textSize="@dimen/t_11sp"
                        />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_houseSell"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:background="@drawable/bg_home_property2"
                android:gravity="center"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="@mipmap/ic_home_sell"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_2"
                        android:layout_toRightOf="@+id/img1"
                        android:text="找物业买房"
                        android:textColor="@color/white"
                        android:textSize="@dimen/t_13sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img1"
                        android:layout_marginTop="@dimen/margin_5"
                        android:text="物业认证省心称心"
                        android:textColor="@color/white"
                        android:textSize="@dimen/t_11sp"
                        />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_houseCommit"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:background="@drawable/bg_home_property3"
                android:gravity="center"
                android:orientation="vertical"
