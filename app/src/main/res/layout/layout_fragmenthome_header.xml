        android:layout_height="140dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        app:banner_default_image="@color/transparents"
        app:indicator_drawable_selected="@drawable/allshape_oval_orange"
        app:indicator_drawable_unselected="@drawable/allshape_oval_white"
        app:indicator_height="6dp"
        app:indicator_margin="@dimen/margin_5"
        app:indicator_selected_height="6dp"
        app:indicator_selected_width="6dp"
        app:indicator_width="6dp"/>
    <!--导航-->
    <RelativeLayout
        android:id="@+id/ry_daohang"
