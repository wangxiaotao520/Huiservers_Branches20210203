<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/windowbackground"
    android:layout_height="match_parent">
    <!--下单成功提示-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_gravity="center_vertical"
                android:layout_height="20dp"
                android:background="@mipmap/ic_number_bind" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下单成功"
                android:layout_marginLeft="10dp"
                android:textColor="@color/title_color"
                android:textSize="18dp" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_top_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="请提前联系商家预约上门服务时间"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/title_color"
            android:layout_marginBottom="30dp"
            android:textSize="14dp" />


    </LinearLayout>
    <!--地址-->
    <LinearLayout
        android:id="@+id/ly_user_address"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:padding="@dimen/margin_15"
        android:visibility="visible">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/ic_shop_order_address"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/tv_order_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:textColor="@color/title_color"
                android:textSize="@dimen/t_14sp"
                android:text="赵芸芸"/>

            <TextView
                android:id="@+id/tv_order_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_toRightOf="@+id/tv_order_name"
                android:textColor="@color/title_third_color"
                android:textSize="@dimen/t_13sp"
                android:text="13065478547"/>

            <TextView
                android:id="@+id/tv_order_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_order_name"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginTop="@dimen/margin"
                android:textColor="@color/title_color"
                android:textSize="@dimen/t_12sp"
                android:text="地址：山西省晋中市榆次区蕴华街汇东路口"/>

        </RelativeLayout>

    </LinearLayout>
    <!--服务名称-->
    <LinearLayout
        android:id="@+id/ll_order_detail_name_container"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            fresco:placeholderImage="@color/default_img_color"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:roundAsCircle="false"
            fresco:roundedCornerRadius="5dp" />

        <TextView
            android:id="@+id/tv_service_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/title_color"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"
            android:text="集成灶清洗服务" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_service_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/title_third_color"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:textSize="14dp"
            android:text="查看详情 " />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_arrow_right_grey"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dp" />

    </LinearLayout>
    <!--订单信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:padding="@dimen/margin_15">

        <TextView
            android:id="@+id/tv_order_num"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:textColor="@color/title_color"
            android:textSize="@dimen/t_14sp"
            android:text="订单编号：109006737510"/>

        <TextView
            android:id="@+id/tv_xiadan_time"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:textColor="@color/title_color"
            android:textSize="@dimen/t_14sp"
            android:text="下单时间：2020-01-04 16:41:56"/>

        <TextView
            android:id="@+id/tv_but_num"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:textColor="@color/title_color"
            android:textSize="@dimen/t_14sp"
            android:text="购买数量：2"/>

        <LinearLayout
            android:id="@+id/ly_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin"
            android:layout_marginTop="@dimen/margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/title_color"
                android:textSize="@dimen/t_14sp"
                android:text="订单金额："/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/orange"
                android:textSize="@dimen/t_14sp"
                android:text="￥150"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_pay_type"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:textColor="@color/title_color"
            android:textSize="@dimen/t_14sp"
            android:text="支付方式：支付宝"/>
        <LinearLayout
            android:id="@+id/ly_beizhu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/title_color"
                android:textSize="@dimen/t_14sp"
                android:text="备注："/>

            <TextView
                android:id="@+id/tv_beizhu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/title_color"
                android:textSize="@dimen/t_14sp"
                android:text="货物太差啦啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊 啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊 "/>

        </LinearLayout>

    </LinearLayout>
    <!--订单状态-->
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textColor="@color/title_color"
        android:text="订单状态"
        android:textSize="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="15dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="2dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_btn_1"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:textColor="@color/title_color"
            android:text="申请退款"
            android:textSize="13dp"
            android:gravity="center"
            android:background="@drawable/allshape_stroke_grey_bb35"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            />
        <TextView
            android:id="@+id/tv_btn_2"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:textColor="@color/orange"
            android:text="完成服务"
            android:textSize="13dp"
            android:gravity="center"
            android:background="@drawable/allshape_stroke_orange_35"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp" />
    </LinearLayout>
</LinearLayout>