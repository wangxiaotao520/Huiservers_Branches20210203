<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowbackground"
    android:orientation="vertical">

    <include layout="@layout/titlebar_center" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/margin_15"
                android:paddingRight="@dimen/margin_15">

                <LinearLayout
                    android:id="@+id/ly_select_house"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="*"
                        android:textColor="@color/red_ed"
                        android:textSize="@dimen/t_15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:text="选择房屋"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/t_15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_house"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin"
                            android:hint="请选择房屋"
                            android:text=""
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/gray4"
                            android:textSize="@dimen/t_15sp" />

                        <ImageView
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/ic_arrow_right_grey" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/windowbackground" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_45"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="*"
                        android:textColor="@color/red_ed"
                        android:textSize="@dimen/t_15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:text="人员姓名"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/t_15sp" />

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="right|center_vertical"
                        android:hint="请输入姓名"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/gray4"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="@dimen/t_15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_id_card"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_45"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="*"
                        android:textColor="@color/red_ed"
                        android:textSize="@dimen/t_15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:text="身份证号"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/t_15sp" />

                    <EditText
                        android:id="@+id/et_shenfen_num"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="right|center_vertical"
                        android:hint="请输入身份证号"
                        android:maxLength="18"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/gray4"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="@dimen/t_15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/windowbackground" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_45"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="*"
                        android:textColor="@color/red_ed"
                        android:textSize="@dimen/t_15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:text="联系电话"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/t_15sp" />

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="right|center_vertical"
                        android:hint="请输入电话"
                        android:maxLength="11"
                        android:numeric="integer"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/gray4"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="@dimen/t_15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/windowbackground" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_45"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:text="车牌号"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/t_15sp" />

                    <EditText
                        android:id="@+id/et_car_num"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="right|center_vertical"
                        android:hint="请输入车牌号"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/gray4"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="@dimen/t_15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/windowbackground" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_45"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="*"
                        android:textColor="@color/red_ed"
                        android:textSize="@dimen/t_15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:text="到达地址"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/t_15sp" />

                    <EditText
                        android:id="@+id/et_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="right|center_vertical"
                        android:hint="请输入到达地址"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/gray4"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="@dimen/t_15sp" />
                </LinearLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="@dimen/margin"
                android:background="@color/white"
                android:gravity="top"
                android:hint="请输入来访事由"
                android:padding="@dimen/margin"
                android:textColor="@color/text_color"
                android:textColorHint="@color/gray4"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="@dimen/t_15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@mipmap/ic_property_notice" />

                <TextView
                    android:id="@+id/tv_shenhe_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:text="请输入真实信息，否则无法通过审核"
                    android:textColor="@color/gray_99"
                    android:textSize="@dimen/t_12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_btn"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginTop="35dp"
                android:layout_marginRight="@dimen/margin_15"
                android:layout_marginBottom="35dp"
                android:background="@drawable/allshape_orange"
                android:gravity="center"
                android:text="提 交"
                android:textColor="@color/white"
                android:textSize="@dimen/t_16sp" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>