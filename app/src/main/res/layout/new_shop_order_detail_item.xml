<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/margin_15"
            android:paddingRight="@dimen/margin_15"
            android:paddingTop="@dimen/margin_20"
            android:paddingBottom="@dimen/margin_15">

            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="90dp"
                android:layout_height="90dp"
               />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginBottom="@dimen/margin_5"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/margin_5"
                    android:text=""
                    android:ellipsize="end"
                    android:lines="2"
                    android:textColor="@color/c_title"
                    android:textSize="@dimen/t_14sp"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center|bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/t_18sp"/>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right|bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_tui"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:background="@drawable/allshape_gray_20"
                            android:gravity="center"
                            android:paddingBottom="@dimen/margin_3"
                            android:paddingLeft="@dimen/margin_15"
                            android:paddingRight="@dimen/margin_15"
                            android:paddingTop="@dimen/margin_3"
                            android:text="退款"
                            android:textSize="@dimen/t_12sp"
                            android:textColor="@color/gray2"/>


                        <TextView
                            android:id="@+id/tv_pingjia"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginLeft="@dimen/margin"
                            android:background="@drawable/allshape_zorange_k_20"
                            android:gravity="center"
                            android:paddingBottom="@dimen/margin_3"
                            android:paddingLeft="@dimen/margin_15"
                            android:paddingRight="@dimen/margin_15"
                            android:paddingTop="@dimen/margin_3"
                            android:text="评价"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/t_12sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        
        
       <ImageView
           android:id="@+id/iv_icon"
           android:visibility="gone"
           android:layout_alignParentRight="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginRight="@dimen/margin_20"
           android:background="@drawable/icon_finish"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:background="@color/view_background"/>
</LinearLayout>