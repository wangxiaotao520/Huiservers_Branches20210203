<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/all_gray"
    android:orientation="vertical">

    <include layout="@layout/titlebar_center"></include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingTop="24dp"
                    android:paddingLeft="16dp">

                    <TextView
                        android:id="@+id/tv_verifyID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/title_color"
                        android:textColorHint="@color/gray_a2"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        tools:text="李/水平" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rel_selectaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:background="@color/white"
                    android:paddingBottom="25dp"
                    android:paddingLeft="16dp">

                    <TextView
                        android:id="@+id/tv_house"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/t_15sp"
                        tools:text="商贸测试小区1号楼1单元101" />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5px"
                    android:background="@color/line"
                    />
                <TextView
                    android:id="@+id/tv_jiaofei_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/title_color"
                    android:textColorHint="@color/gray_a2"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingTop="15dp"
                    android:background="@color/white"
                    android:paddingLeft="16dp"
                    android:text="房屋缴费"  />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin">

                    <LinearLayout
                        android:id="@+id/ly_wuye"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">



                        <TextView
                            android:id="@+id/tv_wuye"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin"
                            android:text="物业费"
                            android:background="@drawable/allshape_orange_35_second"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/t_15sp" />

                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical">


                    <com.huacheng.huiservers.view.MyListView
                        android:id="@+id/lsit"
                        android:layout_width="match_parent"
                        android:background="@drawable/white"
                        android:layout_height="match_parent"/>

                    <include layout="@layout/no_data" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/ll_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white"
                android:paddingLeft="@dimen/margin"
                android:paddingRight="@dimen/margin">

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总额："
                        android:textColor="@color/red_ed"
                        android:textSize="@dimen/t_14sp" />

                    <TextView
                        android:id="@+id/tv_account_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/red_ed"
                        android:textSize="@dimen/t_18sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_jf"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/allshape_orange35"
                    android:gravity="center"
                    android:text="立即缴费"
                    android:textSize="16sp"
                    android:textColor="@color/white" />

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
