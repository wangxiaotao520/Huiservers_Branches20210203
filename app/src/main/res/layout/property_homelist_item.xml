<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:visibility="gone"
        android:id="@+id/view_hine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_5"
        android:background="#EFEFEF"/>

    <TextView
        android:id="@+id/tv_tag_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="物业费"
        android:textColor="@color/gray_55"
        android:textSize="@dimen/t_15sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_5"
        android:paddingTop="@dimen/margin_5"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_timeInterval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-07-08/2019-07-08"
            android:textColor="@color/gray_55"
            android:textSize="@dimen/t_15sp" />

        <TextView
            android:id="@+id/tv_timePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2283.22元"
            android:textColor="@color/gray_55"
            android:textSize="@dimen/t_15sp" />

    </RelativeLayout>

</LinearLayout>
