<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_tag_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="装修保证金"
        android:textColor="@color/title_sub_color"
        android:background="@color/windowbackground"
        android:textStyle="normal"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:textSize="14sp"/>

    <RelativeLayout
        android:id="@+id/rl_click"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="14dp"
        android:visibility="visible">
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_check"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_shop_no"
                android:layout_marginRight="14dp"
                android:visibility="gone"
                />
            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_timeInterval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018.07.08 - 2019.07.08"
                android:textColor="@color/title_sub_color"
                android:textSize="@dimen/t_15sp" />

        </LinearLayout>


        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_timePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2283.22元"
            android:textColor="#E0473F"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/t_15sp" />

    </RelativeLayout>

<View
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="@color/line"
    />
</LinearLayout>