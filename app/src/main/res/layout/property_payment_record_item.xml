<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/windowbackground"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/windowbackground"
           android:paddingTop="28dp"
            android:text="2014.02.23"
            android:gravity="center_horizontal"
            android:textColor="@color/title_third_color"/>

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/allshape_white"
            android:orientation="vertical"
            android:padding="@dimen/margin_15">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一修哥"
                android:textColor="@color/title_color"
                android:textSize="@dimen/t_16sp"/>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="房屋：1号楼1单元101"
                android:textColor="@color/title_sub_color"
                android:textSize="14sp"/>



            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/tv_order_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="账单号："
                android:textColor="@color/title_sub_color"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_5"
               android:layout_marginTop="15dp"
                android:text="缴费明细："
                android:textColor="@color/title_third_color"
                android:textSize="14sp"/>

            <com.huacheng.huiservers.view.MyListView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.huacheng.huiservers.view.MyListView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退款总计："
                    android:textColor="@color/title_third_color"

                    android:visibility="visible"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/tv_refund_tot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00元 "
                    android:layout_marginLeft="25dp"
                    android:textColor="@color/orange"
                    android:visibility="visible"
                    android:textSize="14sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已缴金额："
                    android:textColor="@color/title_third_color"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_all_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00元"
                    android:layout_marginLeft="25dp"
                    android:textColor="@color/orange"
                    android:visibility="visible"
                    android:textSize="14sp"/>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>