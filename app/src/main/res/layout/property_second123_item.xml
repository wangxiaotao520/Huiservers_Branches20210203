<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ly_other"
              android:visibility="gone"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/margin"
              android:background="@color/white"
              android:orientation="vertical"
              android:paddingLeft="@dimen/margin"
              android:paddingRight="@dimen/margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_20"
        android:paddingTop="@dimen/margin_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_type_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="水/电费"
                    android:textColor="@color/black_jain_87"
                    android:textSize="@dimen/t_15sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="余额："
                        android:textColor="@color/gray_55"
                        android:textSize="@dimen/t_14sp"/>

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/gray_55"
                        android:textSize="@dimen/t_18sp"/>

                </LinearLayout>

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/lin_list_costs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_cz_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="水费充值："
                    android:textColor="@color/gray_55"/>

                <EditText
                    android:id="@+id/et_price"
                    android:layout_width="180dp"
                    android:layout_height="@dimen/margin_40"
                    android:background="@drawable/shape_gray1"
                    android:hint="请输入充值金额"
                    android:inputType="number"
                    android:paddingLeft="@dimen/margin_5"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:text=""
                    android:textColor="@color/gray_55"
                    android:textColorHint="@color/black_fan_27"
                    android:textSize="@dimen/t_14sp"/>

            </LinearLayout>

            <View
                android:id="@+id/view_divider_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/margin"
                android:layout_marginTop="@dimen/margin"
                android:background="@color/black_fan_27"
                android:visibility="gone"></View>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
