<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="@dimen/margin">

        <LinearLayout
            android:id="@+id/lin_most"
            android:layout_width="320dp"
            android:layout_height="164dp"
            android:background="@drawable/allshape_stroke_grey_f8"
            android:orientation="vertical">

            <!--fresco:roundingBorderColor="@color/line_f2"
            fresco:roundingBorderWidth="1dp"
            -->
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_premium_merchat_bg"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                fresco:placeholderImage="@drawable/ic_default_25"
                fresco:placeholderImageScaleType="centerCrop"
                app:roundTopRight="true"
                app:roundTopLeft="true"
                app:roundBottomRight="false"
                app:roundBottomLeft="false"
                fresco:roundedCornerRadius="5dp" />

            <TextView
                android:id="@+id/tv_titleName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:singleLine="true"
                android:layout_marginLeft="@dimen/margin"
                android:textColor="@color/grey"
                android:textSize="@dimen/t_15sp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
