    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogTheme</item>
        <!--Appbar背景色-->
        <!--<item name="colorPrimary">@color/red_li_1012</item>-->
        <item name="colorPrimary">@color/graynew4</item>
        <!--控制各个控件被选中时的颜色 colorAccent-->

        <!--取消水波纹效果-->
        <!-- Background drawable for bordered standalone items that need focus/pressed states. -->
        <item name="android:selectableItemBackground">@null</item>
        <!-- Background drawable for borderless standalone items that need focus/pressed states. -->
        <item name="android:selectableItemBackgroundBorderless">@null</item>

        <!-- 设置自定义水波纹颜色(包括了listivew的item按下颜色) -->
        <!-- The color applied to framework control highlights (ex. ripples, list selectors). -->
        <!--<item name="android:colorControlHighlight">@null</item>-->
        <!--取消水波纹效果-->

        <!--从右向左的转场动画-->
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>
    <!--所有Activity动画-支持动画-->
